{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": ["src/**/*", "config.env", "custom.d.ts"],
	"exclude": ["node_modules", "dist", "**/*.spec.ts"]
}